---
import Layout from '../layouts/Layout.astro';
import HomeIcon from '../components/icons/home.jsx';
import Gamepad2Icon from '../components/icons/gamepad2.jsx';
import Code2Icon from '../components/icons/code2.jsx';
import PaletteIcon from '../components/icons/palette.jsx';
import UserIcon from '../components/icons/user.jsx';
import RedesIcon from '../components/icons/redes.jsx';
import Card from '../components/Card.astro';
import Logo from '../img/logo.jpg';
import GraphicsSnap from '../img/Graphics-Snap.svg';
import DiscordIcon from '../img/Discord-icon.svg';
import GithubIcon from '../img/GitHub-icon.svg';
import InstagramIcon from '../img/Instagram-icon.svg';
import WhatsappIcon from '../img/WhatsApp-icon.svg';
---

<Layout title="GatoArtStudio">
		<div>
			<!-- Navegacion -->
			 <nav class="flex gap-8 mb-12 font-bold">
				<button class="hover:bg-accent hover:text-accent-foreground inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 [&_svg]:pointer-events-none [&_svg]:size-4 [&_svg]:shrink-0">
					<HomeIcon/>
					Inicio
				</button>
				<button class="hover:bg-accent hover:text-accent-foreground inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 [&_svg]:pointer-events-none [&_svg]:size-4 [&_svg]:shrink-0">
					<RedesIcon/>
					Redes
				</button>
				<button class="hover:bg-accent hover:text-accent-foreground inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 [&_svg]:pointer-events-none [&_svg]:size-4 [&_svg]:shrink-0">
					<Code2Icon/>
					Proyectos
				</button>
				<button class="hover:bg-accent hover:text-accent-foreground inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 [&_svg]:pointer-events-none [&_svg]:size-4 [&_svg]:shrink-0">
					<Gamepad2Icon/>
					Mods
				</button>
				<button class="hover:bg-accent hover:text-accent-foreground inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 [&_svg]:pointer-events-none [&_svg]:size-4 [&_svg]:shrink-0">
					<PaletteIcon/>
					Diseños
				</button>
				<button class="hover:bg-accent hover:text-accent-foreground inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 [&_svg]:pointer-events-none [&_svg]:size-4 [&_svg]:shrink-0">
					<UserIcon/>
					Sobre Mí
				</button>
			 </nav>

			<!-- Contenido principal -->
			 <div class="max-w-2xl w-full text-center mb-12">
				<div class="mb-8">
					<img src={Logo.src} class="w-[120px] h-[120px] mx-auto mb-6 rounded-full" alt="GatoArtStudio">
					<h1 class="text-3xl font-bold mb-2">
					GatoArtStudio
					</h1>
					<p class="text-gray-600 mb-4">Desarrollador & Diseñador Gráfico</p>
					<p class="text-sm text-gray-500 max-w-lg mx-auto">
						Especializado en desarrollo de mods y plugins para Minecraft, combinando mis habilidades de programación con
						diseño gráfico para crear experiencias únicas y atractivas.
					</p>
				</div>

				<!-- Botón de contacto -->
				 <div class="grid gap-3">
					<link rel="stylesheet" href="">
						<div class="flex items-center justify-center gap-2 rounded-lg border bg-card text-card-foreground shadow-sm p-4 hover:shadow-md hover:scale-105 transition-all duration-300">
							<Gamepad2Icon/>
							Ver Proyectos de Minecraft
						</div>
					</link>
					<link rel="stylesheet" href="">
						<div class="flex items-center justify-center gap-2 rounded-lg border bg-card text-card-foreground shadow-sm p-4 hover:shadow-md hover:scale-105 transition-all duration-300">
							<Code2Icon/>
							Explorar Portfolio de Desarrollo
						</div>
					</link>
					<link rel="stylesheet" href="">
						<div class="flex items-center justify-center gap-2 rounded-lg border bg-card text-card-foreground shadow-sm p-4 hover:shadow-md hover:scale-105 transition-all duration-300">
							<PaletteIcon/>
							Ver Trabajos de Diseño
						</div>
					</link>
				 </div>
			 </div>
		</div>
</Layout>

<style>
	main {
		padding: 1rem;
		width: 100%;
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
</style>
<script is:inline src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/gsap.min.js"></script>
<script is:inline src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/ScrollTrigger.min.js"></script>
<script>
	window.addEventListener("load", () => {
		gsap.from('.my-element', {
			y: -300,
			rotation: 360,
			duration: 2,
			ease: 'bounce.out'
		})
		gsap.to('.text-animation-infinite', {
			x: 10,
			duration: 5,
			repeat: -1,
			yoyo: true,
			ease: 'bounce.out'
		})

		const buttonContact = document.querySelector('.button-contact');
		buttonContact?.addEventListener('click', () => {
			window.location.href = '/redes';
		})

	});
	const image = document.querySelector('.my-element');
	image?.addEventListener('mouseover', () => {
		console.log('Hover hecho')
	})
	function ScrollToTop() {
		window.scrollTo(0, 0);
		console.log('Scroll feito')
	}
</script>