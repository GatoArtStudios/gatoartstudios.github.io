---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Logo from '../img/logo.jpg';
import GraphicsSnap from '../img/Graphics-Snap.svg';
import DiscordIcon from '../img/Discord-icon.svg';
import GithubIcon from '../img/GitHub-icon.svg';
import InstagramIcon from '../img/Instagram-icon.svg';
import WhatsappIcon from '../img/WhatsApp-icon.svg';
---

<Layout title="GatoArtStudio">
	<main>
		<div class="flex flex-row justify-center space-x-2 mb-3">
			<button class="bg-white/40 rounded-xl text-center text-black text-2xl font-semibold w-[162px] h-[53px] font-family: "Inter", sans-serif">Sobre mí</button>
			<button class="bg-white/40 rounded-xl text-center text-black text-2xl font-semibold w-[162px] h-[53px] font-family: "Inter", sans-serif">Proyectos</button>
			<button class="button-contact bg-white/40 rounded-xl text-center text-black text-2xl font-semibold w-[162px] h-[53px] font-family: "Inter", sans-serif">Contacto</button>
		</div>
		<div class="flex flex-col mt-32 h-[78vh]">
			<div class="flex flex-row space-x-14 justify-evenly">
				<div style="font-family: 'Anonymous Pro', monospace;" class="flex flex-col items-center justify-center w-96 text-center text-2xl text-black">
					<h2 class="font-semibold text-4xl font-family: "Inter", sans-serif">
						Diseñador
					</h2>
					<article>
						Transformo ideas <br>
						en experiencias visuales que <br>
						cautivan y comunican con <br>
						precisión.
					</article>
				</div>
				<div>
					<img src={Logo.src} alt="GatoArtStudio" class="w-[300px] rounded-full"/>
				</div>
				<div style="font-family: 'Anonymous Pro', monospace;" class="flex flex-col items-center justify-center w-96 text-center text-2xl text-black">
					<h2 class="font-semibold text-4xl font-family: "Inter", sans-serif">
						&lt;/Código&gt;
					</h2>
					<article>
						Donde el código y <br>
						la creatividad se encuentran <br>
						para crear soluciones <br>
						innovadoras.
					</article>
				</div>
			</div>
			<div class="flex flex-col justify-center text-black text-center mt-5" style="font-family: 'Anonymous Pro', monospace;">
				<h2 class="font-semibold text-4xl font-family: "Inter", sans-serif">
					Hola, Soy GatoArtStudio.
				</h2>
				<article class="text-3xl">
					Diseñador Gráfico & Desarrollador Full Stack. <br>
					Fusiono creatividad y tecnología para dar vida a ideas.
				</article>
			</div>
			<div class="flex flex-row justify-between items-end h-full">
				<div>
					<img src={GraphicsSnap.src} alt="Grafico decorativo en espiral" class="-translate-x-32">
				</div>
				<div class="flex flex-col -space-y-5">
					<img src={GithubIcon.src} alt=""  class="h-[80px]">
					<img src={DiscordIcon.src} alt=""  class="h-[80px]">
					<img src={WhatsappIcon.src} alt=""  class="h-[80px]">
					<img src={InstagramIcon.src} alt=""  class="h-[80px]">
				</div>
			</div>
		</div>
		<div class="flex flex-col items-center h-[800vh]">
		</div>
	</main>
</Layout>

<style>
	main {
		padding: 1rem;
		width: 100%;
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
</style>
<script is:inline src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/gsap.min.js"></script>
<script is:inline src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/ScrollTrigger.min.js"></script>
<script>
	window.addEventListener("load", () => {
		gsap.from('.my-element', {
			y: -300,
			rotation: 360,
			duration: 2,
			ease: 'bounce.out'
		})
		gsap.to('.text-animation-infinite', {
			x: 10,
			duration: 5,
			repeat: -1,
			yoyo: true,
			ease: 'bounce.out'
		})

		const buttonContact = document.querySelector('.button-contact');
		buttonContact?.addEventListener('click', () => {
			window.location.href = '/redes';
		})

	});
	const image = document.querySelector('.my-element');
	image?.addEventListener('mouseover', () => {
		console.log('Hover hecho')
	})
	function ScrollToTop() {
		window.scrollTo(0, 0);
		console.log('Scroll feito')
	}
</script>